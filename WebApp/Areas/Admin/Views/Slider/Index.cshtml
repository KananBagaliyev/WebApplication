
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sldier List</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Details
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Slider slider in Model) {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/img/@slider.Name" style="width:150px !important; height:100px !important; border-radius:0; border:2px solid black" alt="image" />
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                        @*<a asp-action="Edit" asp-route-id="@slider.Id" href="#" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                        <a asp-action="Delete" asp-route-id="@slider.Id" href="#" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>*@
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

