
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category List</h4>
                <div class="col-12">
                    <a asp-action="Create" class="btn btn-success">Create a new category</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Details
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <p>@category.Name</p>
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

