@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">All Users</h4>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    Details
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <p>@item.Fullname</p>
                                    </td>
                                    <td>
                                        <p>@item.Role</p>
                                    </td>
                                    <td>
                                        <a asp-route-id="@item.Id" asp-area="Admin" asp-controller="Users" asp-action="Detail" class="btn btn-success"><i class=" mdi mdi-details "></i></a>
                                        <a asp-action="Edit" asp-controller="Users" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-table-edit "></i></a>
                                        <a asp-action="Delete" asp-controller="Users" asp-route-id="@item.Id" class="btn btn-danger"><i class=" mdi mdi-delete-forever "></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


