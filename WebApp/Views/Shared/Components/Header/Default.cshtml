                                        </ul>
                                    </div>
                                </li>
                                @if (User.Identity.IsAuthenticated) {
                                    <li class="main">
                                        <div class="header"><a>@ViewBag.UserFullname</a></div>
                                        <div class="content"><a asp-controller="Account" asp-action="Logout" >Log Out</a></div>
                                    </li>
                                }
                                else {
                                    <li class="login" style="margin-left:40px;float:left;font-family:'Montserrat',sans-serif;font-size:15px;margin-top:30px;cursor:pointer">
                                        <div class="headerx"><a asp-controller="Account" asp-action="Login" style="color:black">LOG IN</a></div>
